$(document).ready(function(){var _screen=screen.width;if(_screen>768){var x1=$(".box-2").outerHeight()+$(".box-3").outerHeight()-2;$(".new-image1").css({'height':x1+'px'})}
if(_screen<=768&&_screen>500){var x1=$(".box-2").outerHeight()+$(".box-3").outerHeight()-2;$(".new-image1").css({'height':x2+'px'})}
if(_screen<=500){$(".new-image1").css({'width':100+'%'})}})